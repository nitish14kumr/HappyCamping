<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit <%= campground.name %></h1>
        <div style="width:30%; margin:35px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>" placeholder="Image">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[description]" class="form-control" value="<%= campground.description %>" placeholder="Description">
                </div>
                <div class="form-group">
                    <input type="submit" value="UPDATE" class="btn btn-success btn-lg btn-block">
                </div>
            </form>
            <a href="/campgrounds">View Campground</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
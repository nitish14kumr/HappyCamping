<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit <%= campground.name %></h1>
        <div style="width:30%; margin:35px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="campground[name]" class="form-control" value="<%= campground.name %>" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input type="text" id="image" name="campground[image]" class="form-control" value="<%= campground.image %>" placeholder="Enter Image">
                </div>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <input type="text" id="desc" name="campground[description]" class="form-control" value="<%= campground.description %>" placeholder="Enter Description">
                </div>
                <div class="form-group">
                    <label for="cost">Price/label>
                  <input type="number" id="cost" name="campground[cost]" class="form-control" value="<%= campground.cost %>" placeholder="Enter Cost/Night" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <input type="submit" value="UPDATE" class="btn btn-success btn-lg btn-block">
                </div>
            </form>
            <a href="/campgrounds">View Campground</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
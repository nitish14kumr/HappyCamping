<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-7 text-center">
            <h1 style="text-align:center;">Create a new Campground</h1>
            <img class="img-fluid rounded" src="https://source.unsplash.com/Aj6mvFNBXAA">
        </div>
        <div class="col-lg-4 col-md-5 mt-4">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="campground[name]" class="form-control" placeholder="Enter Name" required>
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input type="text" id="image" name="campground[image]" class="form-control" placeholder="Enter Image Link" required>
                </div>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <input type="text" id="desc" name="campground[description]" class="form-control" placeholder="Enter Description" required>
                </div>
                <div class="form-group">
                    <label for="cost">Price</label>
                  <input type="number" id="cost" name="campground[cost]" class="form-control" placeholder="Enter Cost/Night" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <input type="submit" value="ADD" class="btn btn-success btn-lg btn-block">
                </div>
            </form>
            <a href="/campgrounds">View Campground</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
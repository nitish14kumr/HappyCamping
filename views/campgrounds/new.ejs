<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Create a new Campground</h1>
        <div style="width:30%; margin:35px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" name="campground[name]" class="form-control" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[image]" class="form-control" placeholder="Image">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[description]" class="form-control" placeholder="Description">
                </div>
                <div class="form-group">
                    <input type="submit" value="ADD" class="btn btn-success btn-lg btn-block">
                </div>
            </form>
            <a href="/campgrounds">View Campground</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
<% include partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center mb-2">
            <h1>Reset Password</h1>
        </div>
        <div class="col-md-6 col-12">
            <form action="/reset/<%= token %>" method="POST">
                <div class="form-group">
                    <input type="password" name="password" autofocus class="form-control" placeholder="Enter Password">
                </div>
                <div class="form-group">
                    <input type="password" name="cnfpassword" autofocus class="form-control" placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <input type="submit" value="Change Password" class="btn btn-success btn-lg btn-block">
                </div>
                <span class="pull-right"><a href="/forgot">Forgot Password?</a></span>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>
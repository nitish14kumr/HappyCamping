<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit Comment</h1>
        <div style="width:30%; margin:35px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" class="form-control" value="<%= comment.text %>" placeholder="Text">
                </div>
                <div class="form-group">
                    <input type="submit" value="UPDATE" class="btn btn-success btn-lg btn-block">
                </div>
            </form>
            <a href="/campgrounds">View Campground</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
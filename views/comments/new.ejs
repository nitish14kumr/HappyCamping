<% include ../partials/header %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1 style="text-align:center;">Add New Comment to <%= campground.name %></h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" class="form-control" placeholder="Text">
                </div>
                <div class="form-group">
                    <input type="submit" value="ADD" class="btn btn-success btn-lg btn-block">
                </div>
            </form>
            <a href="/campgrounds">View Campground</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>